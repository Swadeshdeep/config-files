alias nviml="NVIM_APPNAME=LazyVim nvim"
alias nvimchad="NVIM_APPNAME=NvChad nvim"
alias nvimk="NVIM_APPNAME=Kickstart nvim"


function nvims() {
  items=("default" "LazyVim" "Kickstart" "NvChad")
  config=$(printf "%s\n" "${items[@]}" | fzf --prompt="î˜« Neovim Config > " --height=~50% --layout=reverse --border --exit-0)
  if [[ -z $config ]]; then
    echo "Nothing selected"
    return 0
  elif [[ $config == "default" ]]; then
    config=""
  fi
  NVIM_APPNAME=$config nvim $@
}

bindkey -s ^b "nvims\n"
